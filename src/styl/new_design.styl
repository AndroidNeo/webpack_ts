body
  background #fff
  font-family: 'Raleway', sans-serif;
  font-size: 28px;
  font-weight: 400;
  .grid
    .cell
      background rgba(238, 228, 218, 0.35)
      border none
      text-align center
      box-shadow: 1px 0 0 0 #C4C0A4, 0 1px 0 0 #C4C0A4, 1px 1px 0 0 #C4C0A4, 1px 0 0 0 #C4C0A4 inset, 0 1px 0 0 #C4C0A4 inset;
      color rgba(1,147,154,0.7)
    .type-0
      box-shadow: 4px 3px 3px rgba(0,0,0,0.5);
      border: none
      background #fff
      overflow hidden
      background rgba(238, 228, 218, 1)
      &:after
        content ''
        //background rgba(238, 228, 218, 0.7)
        -webkit-filter: blur(10px)
        width: 110%;
        height: 110%;
        top: 0;
        left 0
        display block
    .type-1, .type-2
      z-index 1
    .tile
      background none
      border: none
      text-align center
      z-index 1
      span
        position relative
        z-index 1
        color #F3F0ED
      &:after
        content '';
        display block;
        top: 3px;
        left: 3px;
        position absolute
        background rgba(1, 147, 154, 0.53)
        border-radius 0
        width: calc(100% - 6px)
        height: calc(100% - 6px)
        box-shadow 4px 3px 3px rgba(0,0,0,0.5);
